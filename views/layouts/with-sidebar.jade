extends main

block content
  .container-liquid
    .row.documentation
      .col-sm-4.mid-blue.sidebar
        .headline-spacer
        section.navigation
          h2= sidebarTitle
          ul
            each section in sections
              - isActiveSection = (section.permalink === permalink)
              li(class=(isActiveSection ? 'active' : ''))
                a(href=section.url)= section.title
                if isActiveSection && section.subSections.length > 0
                  ul
                    each item in section.subSections
                      li
                        a(href=section.url + "#" + item.anchor)= item.text
        .clearfix
      .col-sm-8.beige.content
        block documentation

block bottom
  script(src="/javascripts/documentation.js")
