#!/usr/bin/env node

var sh     = require('execSync')
  , semver = require('semver')
  , _      = require('lodash')
  , tags   = _.compact(sh.exec("git tag").stdout.split("\n"))

var latest = tags.reduce(function(latest, tag) {
  return semver.gt(tag, latest) ? tag : latest
})

tags.forEach(function(tag) {
  console.log("Downloading", tag, "...")

  var tagFolder = "." + tag

  sh.run([
    "cd " + __dirname + "/../",
    "git submodule add --quiet https://github.com/sequelize/sequelize-doc views/docs/" + tagFolder,
    "cd views/docs/" + tagFolder,
    "git checkout --quiet " + tag
  ].join(";"))
})
